{
  "name": "node-magickwand",
  "version": "0.0.5",
  "description": "Node.js bindings for imagemagick",
  "main": "./lib/index.js",
  "scripts": {
    "deps:magickcore": "node src/deps.js src/deps-stub.cc deps/ImageMagick/MagickCore swig/magickcore.i",
    "deps:magick++": "node src/deps.js src/deps-stub.cc deps/ImageMagick/Magick\\\\+\\\\+ swig/magick++.i",
    "deps:magickwand": "node src/deps.js src/deps-stub.cc deps/ImageMagick/MagickWand swig/magickwand.i",
    "deps": "mkdir -p swig && npm run deps:magickcore && npm run deps:magick++ && npm run deps:magickwand",
    "deps:download": "node scripts/deps-download.js",
    "swig": "swig -javascript -napi -c++ -Ideps/ImageMagick/Magick++/lib -Ideps/ImageMagick -DMAGICKCORE_HDRI_ENABLE=1 -DMAGICKCORE_QUANTUM_DEPTH=16 -o swig/Magick++.cxx src/Magick++.i",
    "publish:generated": "node scripts/publish-generated.js",
    "preinstall": "npm run deps:download",
    "install": "node-pre-gyp install --fallback-to-build",
    "lint": "eslint lib/*.js test/*.js",
    "test": "mocha --reporter=tap",
    "preversion": "npm run lint && npm run test",
    "postversion": "git push && git push --tags && node ./scripts/publish-packages.js",
    "postpublish": "gh workflow run test-package.yml -F version=$npm_package_version"
  },
  "keywords": [
    "imagemagick",
    "magick",
    "image",
    "resize",
    "convert",
    "filters"
  ],
  "binary": {
    "module_name": "node-magickwand",
    "module_path": "./lib/binding/{platform}-{arch}",
    "remote_path": "v{version}",
    "host": "https://github.com/mmomtchev/node-magickwand/releases/download/",
    "package_name": "{platform}-{arch}.tar.gz",
    "hosting": {
      "provider": "github",
      "repo": "mmomtchev/node-magickwand"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmomtchev/node-magickwand.git"
  },
  "author": "Momtchil Momtchev <momtchil@momtchev.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mmomtchev/node-magickwand/issues"
  },
  "homepage": "https://github.com/mmomtchev/node-magickwand#readme",
  "devDependencies": {
    "@octokit/core": "^4.2.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.39.0",
    "eslint-plugin-mocha": "^10.1.0",
    "gh-pages": "^5.0.0",
    "mocha": "^10.2.0"
  },
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.10",
    "node-addon-api": "^5.1.0"
  },
  "engines": {
    "node": ">=14"
  }
}
