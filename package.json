{
  "name": "magickwand.js",
  "version": "1.1.0",
  "description": "JavaScript and TypeScript bindings for ImageMagick-7 - native and WASM",
  "main": "./lib/index.cjs",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.mjs",
      "require": "./lib/index.cjs"
    },
    "./wasm": {
      "types": "./wasm/index.d.ts",
      "default": "./wasm/index.js"
    },
    "./wasm/main": {
      "default": "./lib/binding/emscripten-wasm32/magickwand.js"
    },
    "./wasm/worker": {
      "default": "./lib/binding/emscripten-wasm32/magickwand.worker.js"
    },
    "./wasm/wasm": {
      "default": "./lib/binding/emscripten-wasm32/magickwand.wasm"
    }
  },
  "scripts": {
    "deps:download": "node scripts/deps-download.js",
    "publish:generated": "node scripts/publish-generated.js",
    "install": "xpm install && xpm run npm-install",
    "preinstall": "npm run deps:download",
    "lint": "eslint lib/*.cjs test/*.ts",
    "test": "mocha --reporter=tap test/*.test.ts",
    "preversion": "npm run lint && npm run test",
    "postversion": "git push && git push --tags && node ./scripts/publish-packages.mjs",
    "postpublish": "gh workflow run test-package.yml -F version=$npm_package_version",
    "example:browser": "cd example/browser/webpack && npx webpack-cli serve --mode=development --env development",
    "demo:start": "cd example/browser/demo && npx webpack-cli serve --mode=development --env development",
    "demo:build": "cd example/browser/demo && npx webpack --mode production",
    "demo:deploy": "cd example/browser/demo/dist && tar -zcf - . | ssh magickwand@orel.garga.net 'tar -C www -zxvf -'"
  },
  "keywords": [
    "imagemagick",
    "magick",
    "image",
    "resize",
    "convert",
    "filters",
    "node.js",
    "wasm"
  ],
  "binary": {
    "module_name": "magickwand",
    "module_path": "./lib/binding/{platform}-{arch}",
    "remote_path": "v{version}",
    "host": "https://github.com/mmomtchev/magickwand.js/releases/download/",
    "package_name": "{platform}-{arch}.tar.gz",
    "hosting": {
      "provider": "github",
      "repo": "mmomtchev/magickwand.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmomtchev/magickwand.js.git"
  },
  "author": "Momtchil Momtchev <momtchil@momtchev.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mmomtchev/magickwand.js/issues"
  },
  "homepage": "https://github.com/mmomtchev/magickwand.js#readme",
  "devDependencies": {
    "@octokit/core": "^6.0.1",
    "@types/chai": "^4.3.6",
    "@types/chai-as-promised": "^7.1.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.50.0",
    "eslint-plugin-mocha": "^10.1.0",
    "gh-pages": "^6.1.1",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-mocha": "^2.0.1",
    "mocha": "github:mmomtchev/mocha#mmom",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.3"
  },
  "dependencies": {
    "@emnapi/runtime": "^1.0.0",
    "@mapbox/node-pre-gyp": "^1.0.11",
    "chalk": "^5.3.0",
    "emnapi": "^1.0.0",
    "node-addon-api": "^8.0.0",
    "xpm": "^0.19.1"
  },
  "engines": {
    "node": ">=18"
  },
  "xpack": {
    "minimumXpmRequired": "0.14.0",
    "dependencies": {},
    "devDependencies": {
    },
    "properties": {
      "module_name": "magickwand",
      "buildFolderRelativePath": "{{ 'build' | path_join: configuration.name | to_filename | downcase }}",
      "installFolderPath": "{{ '/' | path_join: properties.cwd | path_join: 'lib' | path_join: 'binding' | path_join: properties.platformId }}",
      "cachePath": {
        "win32": "{{ env.LOCALAPPDATA | path_join: 'node-hadron' }}",
        "linux": "{{ env.HOME | path_join: '.cache' | path_join: 'node-hadron' }}",
        "darwin": "{{ env.HOME | path_join: '.cache' | path_join: 'node-hadron' }}"
      },
      "toolsFolderPath": "{{ properties.cachePath[os.platform] | path_join: 'tools' }}",
      "conanFolderPath": "{{ properties.cachePath[os.platform] | path_join: 'conan' }}",
      "conanbuild": {
        "win32": "conanbuild.bat",
        "linux": "conanbuild.sh",
        "darwin": "conanbuild.sh"
      },
      "conansource": {
        "win32": "",
        "linux": ".",
        "darwin": "."
      },
      "commandPython": {
        "win32": "set PYTHONPATH=\"{{ properties.toolsFolderPath }}\" && python",
        "linux": "PYTHONPATH=\"{{ properties.toolsFolderPath }}\" python3",
        "darwin": "PYTHONPATH=\"{{ properties.toolsFolderPath }}\" python3"
      },
      "commandConan": {
        "win32": "set CONAN_HOME={{ properties.conanFolderPath }} && {{ properties.commandPython[os.platform] }} -m conans.conan",
        "linux": "CONAN_HOME={{ properties.conanFolderPath }} {{ properties.commandPython[os.platform] }} -m conans.conan",
        "darwin": "CONAN_HOME={{ properties.conanFolderPath }} {{ properties.commandPython[os.platform] }} -m conans.conan"
      },
      "commandMeson": "{{ properties.commandPython[os.platform] }} -m mesonbuild.mesonmain",
      "commandShowEnv": {
        "win32": "set",
        "linux": "env",
        "darwin": "env"
      },
      "commandSetEnv": "{% unless env.CONAN_HOME %}{{ properties.commandSetEnvPerOS[os.platform] }} && {% endunless %}",
      "cwd": "{{ path.sep | path_relative: '.' }}",
      "optionShared": "{% if env.npm_config_shared %}-Dshared=true{% endif %}",
      "optionExternal": "{% if env.npm_config_external %}-Dexternal=true{% endif %}",
      "optionCPPFLAGS": "{% if env.npm_config_extra_cppflags %}-Dcpp_args=\"{{ env.npm_config_extra_cppflags }}\"{% endif %}",
      "optionLDFLAGS": "{% if env.npm_config_extra_ldflags %}-Dcpp_link_args=\"{{ env.npm_config_extra_ldflags }}\"{% endif %}",
      "options": "{{ properties.optionShared }} {{ properties.optionExternal }} {{ properties.optionCPPFLAGS }} {{ properties.optionLDFLAGS }}",
      "commandDownloadEnvironment": "node hadron/hadron-download-headers.mjs",
      "commandGenerate_magickcore": "node src/deps.js src/deps-stub.cc deps/ImageMagick/MagickCore swig/magickcore.i",
      "commandGenerate_magickpp": "node src/deps.js src/deps-stub.cc deps/ImageMagick/Magick\\\\+\\\\+ swig/magick++.i",
      "commandGenerate_magickwand": "node src/deps.js src/deps-stub.cc deps/ImageMagick/MagickWand swig/magickwand.i",
      "commandGenerateDeps": "{{ properties.commandGenerate_magickcore }} && {{ properties.commandGenerate_magickpp }} && {{ properties.commandGenerate_magickwand }}",
      "commandGenerateWrappers": "swig-jse -DGIT_BRANCH=\"%{ // Generated by SWIG on branch `git branch --show-current` `date` %}\" -javascript -typescript -napi -c++ -split -exports '../lib/index.cjs' -Ideps/ImageMagick/Magick++/lib -Ideps/ImageMagick -Isrc -DMAGICKCORE_HDRI_ENABLE=1 -DMAGICKCORE_QUANTUM_DEPTH=16 -o swig/magickwand-js.cxx -outdir swig src/Magick++.i",
      "commandConanInstall": "{{ properties.commandPython[os.platform] }} -m pip install --target {{ properties.toolsFolderPath }} conan",
      "commandMesonInstall": "{{ properties.commandPython[os.platform] }} -m pip install --target {{ properties.toolsFolderPath }} git+https://github.com/mmomtchev/meson@main ",
      "commandConanInit": "{{ properties.commandConan[os.platform] }} profile detect || echo ok",
      "commandConanDependencies": "{{ properties.commandConan[os.platform] }} install . -pr:b=default --build=missing -of {{ properties.buildFolderRelativePath }} --settings=build_type={{ properties.buildType | capitalize }}",
      "commandDependenciesNative": "{{ properties.commandConanDependencies }} -pr:h=./hadron/{{ properties.toolchain }}-{{ os.platform }}.profile",
      "commandDependenciesCross": "{{ properties.commandConanDependencies }} -pr:h=./hadron/{{ properties.toolchain }}.profile",
      "commandPrepare": "{{ properties.commandMeson }} setup --backend ninja --buildtype {{ properties.buildType }} {{ properties.buildFolderRelativePath }} . -Dprefix={{ properties.installFolderPath }} {{ properties.options }}",
      "commandConanBuildEnv": "{{ properties.conansource[os.platform] }} {{ properties.buildFolderRelativePath }}{{ path.sep }}{{ properties.conanbuild[os.platform] }}",
      "commandPrepareNative": "{{ properties.commandConanBuildEnv }} && {{ properties.commandPrepare }} --native-file build{{ path.sep }}napi.ini --native-file hadron{{ path.sep }}conan.ini --native-file hadron{{ path.sep }}{{ properties.toolchain }}-{{ os.platform }}.ini --native-file {{ properties.buildFolderRelativePath }}/conan_meson_native.ini",
      "commandPrepareCross": "{{ properties.commandConanBuildEnv }} && {{ properties.commandPrepare }} --cross-file build{{ path.sep }}napi.ini --cross-file hadron{{ path.sep }}conan.ini --cross-file hadron{{ path.sep }}{{ properties.toolchain }}.ini --cross-file {{ properties.buildFolderRelativePath }}/conan_meson_cross.ini",
      "commandConfigure": "{{ properties.commandMeson }} configure {{ properties.buildFolderRelativePath }}",
      "commandBuild": "{{ properties.commandConanBuildEnv }} && {{ properties.commandMeson }} compile -C {{ properties.buildFolderRelativePath }} -v",
      "commandInstall": "{{ properties.commandMeson }} install -C {{ properties.buildFolderRelativePath }}",
      "commandClean": "{{ properties.commandMeson }} compile -C {{ properties.buildFolderRelativePath }} --clean",
      "scriptBuildFromSource": "{% if env.npm_config_build_from_source %} xpm install && xpm run init && xpm run prepare --config native && xpm run build --config native {% endif %}",
      "scriptBuildWASMFromSource": "{% if env.npm_config_build_wasm_from_source %} xpm install && xpm run init && xpm run prepare --config wasm && xpm run build --config wasm {% endif %}"
    },
    "actions": {
      "generate": [
        "{{ properties.commandGenerateDeps }}",
        "{{ properties.commandGenerateWrappers }}"
      ],
      "init": [
        "{{ properties.commandDownloadEnvironment }}",
        "{{ properties.commandConanInstall }}",
        "{{ properties.commandConanInit }}",
        "{{ properties.commandMesonInstall }}"
      ],
      "npm-install": [
        "{% if env.npm_config_loglevel %}{{ properties.commandShowEnv[os.platform] }}{% endif %}",
        "{{ properties.scriptBuildFromSource }}",
        "{{ properties.scriptBuildWASMFromSource }}"
      ],
      "conan:home": "echo {{ properties.conanFolderPath }}"
    },
    "buildConfigurations": {
      "native": {
        "properties": {
          "buildType": "release",
          "toolchain": "system",
          "platformId": "{{ os.platform | concat: '-' | concat: os.arch }}"
        },
        "actions": {
          "prepare": [
            "{{ properties.commandDependenciesNative }}",
            "{{ properties.commandPrepareNative }}"
          ],
          "configure": "{{ properties.commandConfigure }}",
          "build": [
            "{{ properties.commandBuild }}",
            "{{ properties.commandInstall }}"
          ],
          "clean": "{{ properties.commandClean }}"
        }
      },
      "native-xpack": {
        "inherit": [
          "native"
        ],
        "properties": {
          "buildType": "release",
          "toolchain": "clang"
        },
        "devDependencies": {
          "@xpack-dev-tools/clang": "17.0.6-1.1"
        }
      },
      "wasm": {
        "inherit": [
          "native"
        ],
        "properties": {
          "buildType": "release",
          "toolchain": "emscripten",
          "platformId": "emscripten-wasm32"
        },
        "actions": {
          "prepare": [
            "{{ properties.commandDependenciesCross }}",
            "{{ properties.commandPrepareCross }}"
          ]
        }
      },
      "native-debug": {
        "inherit": [
          "native"
        ],
        "properties": {
          "buildType": "debug"
        }
      },
      "native-xpack-debug": {
        "inherit": [
          "native-xpack"
        ],
        "properties": {
          "buildType": "debug"
        }
      },
      "wasm-debug": {
        "inherit": [
          "wasm"
        ],
        "properties": {
          "buildType": "debug"
        }
      }
    }
  }
}
