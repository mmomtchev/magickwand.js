  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch mocha",
      "type": "cppdbg",
      "request": "launch",
      "program": "/usr/bin/node",
      "args": [
        "--expose-gc",
        "${workspaceFolder}/node_modules/mocha/lib/cli/cli.js",
        "-R",
        "tap",
        "--timeout",
        "0",
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(Windows) Launch mocha",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "C:\\Program Files\\nodejs\\node.exe",
      "args": [
        "--expose-gc",
        "${workspaceFolder}/node_modules/mocha/lib/cli/cli.js",
        "-R",
        "tap",
        "--timeout",
        "0",
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "environment": [],
      "console": "externalTerminal"
    },
    {
      "name": "(gdb) Launch REPL",
      "type": "cppdbg",
      "request": "launch",
      "program": "/usr/bin/node",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
 ]
}
